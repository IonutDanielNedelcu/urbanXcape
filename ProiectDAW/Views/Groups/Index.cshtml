<h2 class="text-center">Groups</h2>
<br />

@if (ViewBag.Message != null)
{
    <div class="alert alert-success">
        @ViewBag.Message
    </div>
}

<div class="container">
    <div>
        <div class="send_text">
            <a asp-controller="Groups" asp-action="New" class="btn btn-success">Add Group</a>
        </div>
    </div>
    <br />
    <br />
    <br />
</div>

@foreach (var group in ViewBag.Groups)
{
    <div class="card">
        <a class="text-decoration-none" asp-controller="Groups" asp-action="Show" asp-route-id="@group.Id">
            <div class="card-body">
                <h3 class="card-title">@group.Name</h3>
                <p class="card-text">@group.Description</p>
            </div>
        </a>
        
    </div>
    <br />
}