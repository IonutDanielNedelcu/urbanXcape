@{
}
<br />
<h2 class="text-center">Groups</h2>
<br />

@if (ViewBag.Message != null)
{
    <div class="alert alert-success">
        @ViewBag.Message
    </div>
}

<div class="container">
    
    <button class="btn btn-success">
        <a asp-controller="Groups" asp-action="New" class="btn btn-success">Add Group</a>
    </button>

</div>

@foreach (var group in ViewBag.Groups)
{
    <div class="card">
        <div class="card-body">
            <h3 class="card-title"><a class="text-decoration-none" asp-controller="Groups" asp-action="Show" asp-route-id="@group.Id">@group.Name</a></h3>
            <p class="card-text">@group.Description<p/>
        </div>
    </div>
}