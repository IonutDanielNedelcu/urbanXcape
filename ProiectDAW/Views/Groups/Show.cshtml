@using System.Security.Claims
@model ProiectDAW.Models.Group
<br />

<div class="container">
    <button class="btn btn-success">
        <a asp-controller="Groups" asp-action="Index" class="btn btn-success">Back to groups</a>
    </button>
</div>

<br />

<div class="card">
    <div class="card-body">

        @if (TempData["message"] != null)
        {
            <div class="alert alert-success">
                @TempData["message"]
            </div>
        }

        <h3 class="card-title">@Model.Name</h3>
        <br />
        <p class="card-text">@Model.Description<p/>
        <br />
        <p class="card-text">Moderated by <a>@Model.Moderator.UserName</a></p>
        <br />

        @if (Model.ModeratorId == ViewBag.CurrentUser)
        {
            <button class="btn btn-success">
                <a asp-controller="Groups" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-success">Edit Group</a>
            </button>
        }
        @if (Model.ModeratorId == ViewBag.CurrentUser || ViewBag.IsAdmin == true)
        {
            <button class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this group?');">
                <a asp-controller="Groups" asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Delete Group</a>
            </button>
        }
            

       <div/>

</div>

<br />

<div>
        <a class="btn btn-outline-primary" asp-controller="Groups" asp-action="NewGroupPost" asp-route-id="@Model.Id"><i class="bi bi-pencil-square"></i>Add post</a>
</div>

<br />

@if (Model.Posts != null)
{
    @foreach (var post in Model.Posts)
    {
        <partial name="PostIndexShow" model="post" />
    }
}

<br />