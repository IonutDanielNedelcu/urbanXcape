@if (ViewBag.Comment != null)
{
    <h2>Editare comentariu</h2>
    <br />

    <form method="post" action="/Comments/Edit/@ViewBag.Comment.Id">

        <label>Continut comentariu</label>
        <br />

        <textarea name="Text">@ViewBag.Comment.Text</textarea>
        <br />

        <button class="btn  btn-primary" type="submit">Editeaza comentariul</button>
    </form>
}
