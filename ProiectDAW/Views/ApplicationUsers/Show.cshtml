@{
    if(TempData["message"] != null)
	{
		<div class="alert alert-success">
			@TempData["message"]
		</div>
	}
}
@using System.Security.Claims
@model ProiectDAW.Models.ApplicationUser
<br />

<div class="container">
    @if (ViewBag.IsCurrentUser)
    {
        @* <button class="btn btn-outline-primary"> *@
        @*     <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">@User.Identity?.Name</a> *@
        @* </button> *@

        <button class="send_text2">
            <a asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage" class="btn btn-success">Manage Account</a>
        </button>

    }
    <br />

    <button class="send_text2">
        <a asp-controller="ApplicationUsers" asp-action="Index" class="btn btn-success">Back to users</a>
    </button>
</div>

<br />

<div class="card">
    <div class="card-body">

        @if (TempData["message"] != null)
        {
            <div class="alert alert-success">
                @TempData["message"]
            </div>
        }

        <img src="@Model.ProfilePic"/>

        <h3 class="card-title">@Model.UserName</h3>
        <br />
        <h2 class="card-title">@Model.FirstName &nbsp; @Model.LastName</h2>
        <br />
        <p class="card-text">@Model.Description<p />
            <br />
            <div />

    </div>
</div>

@if (Model.Privacy == false || ViewBag.IsCurrentUser || ViewBag.IsFollowing)
{
    <div class="card">
        <h2>Posts</h2>
        <br />
        @if (Model.Posts != null)
        {
            @foreach (var post in Model.Posts)
            {
                <partial name="PostIndexShow" model="post" />
            }
        }
        else
        {
            <p>No posts found</p>
        }

        <br />
    </div>
}
else
{
	<p>This user has a private profile</p>

}
@if (ViewBag.IsCurrentUser)
{

    <div class="card">
        <h2>Follow requests</h2>
        <br />
        @if (ViewBag.Requests != null)
        {
            @foreach (var follower in ViewBag.Requests)
            {
                <div class="card">
                    <div class="card-body">
						<h3 class="card-title about_img">
							<a class="text-decoration-none" asp-controller="ApplicationUsers" asp-action="Show" asp-route-id="@follower.FollowerId">@follower.Follower.UserName</a>
						</h3>
						<br />
						<h2>@follower.Follower.FirstName &nbsp; @follower.Follower.LastName</h2>
						<br />
						<p class="card-text">@follower.Follower.Description<p />
						<br />
                        <form method="post" asp-controller="ApplicationUsers" asp-action="Accept" asp-route-id="@follower.FollowerId">
                            <button type="submit" class="btn btn-success">Accept</button>
						</form>
						<form method="post" asp-controller="ApplicationUsers" asp-action="Decline" asp-route-id="@follower.FollowerId">
							<button type="submit" class="btn btn-danger">Decline</button>
						</form>
					</div>
				</div>
            }
		}
		else
		{
			<p>No follow requests found</p>
		}
		<br />
	</div>
}
