@model ProiectDAW.Models.Post

@if (ViewBag.Buttons == true)
{
    <div>
        <a class="btn btn-outline-primary" asp-controller="Posts" asp-action="Edit" asp-route-id="@Model.Id">Edit Post</a>
        <br />
        <!-- Formular pentru Stergere -->
        <form method="post" asp-controller="Posts" asp-action="Delete" asp-route-id="@Model.Id">
            <button class="btn btn-danger" type="submit">Delete Post</button>
        </form>
    </div>
}
@if (ViewBag.Buttons1 == true)
{
    <form method="post" asp-controller="Posts" asp-action="Delete" asp-route-id="@Model.Id">
        <button class="btn btn-danger" type="submit">Delete Post</button>
    </form>
}


@if (TempData["msg"] != null)
{
    <div class="alert alert-danger" role="alert" @TempData["msgType"]>@TempData["msg"]</div>
}
<br />
    
@if (Model != null)
{
    <partial name="PostIndexShow" model="Model" /> 
}

@if (Model.Location != null)
{ 
    <partial name="MapShow" model="Model.Location" />
}

