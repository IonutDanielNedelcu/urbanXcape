@model ProiectDAW.Models.Post

<h2>Formular adaugare postare</h2>

<form enctype="multipart/form-data" asp-controller="Posts" asp-action="New">
    <div class="form-group"> 
        <label asp-for="Description" class="form-label">Descriere</label> 
        <br /> 
        <input asp-for="Description" class="form-control" /> 
       
        <br /><br /> 
    </div>
    <div class="form-group"> 
        <label asp-for="Image">Incarca Imaginea</label> 
        <input asp-for="Image" class="form-control" type="file" /> 
        
        </div>
    <br />
    <button class="btn btn-success" type="submit">Adauga postare</button>
</form>
<br />

@if (!ViewData.ModelState.IsValid) //validare ca postarea sa nu fie goala
{
    <div class="alert alert-danger" role="alert">
        @Html.ValidationSummary(false)
    </div>
}

<div>
    <a class="btn btn-outline-primary" href="/Posts/Index"><i class="bi bi-pencil-square"></i>Inapi la postari</a>
</div>