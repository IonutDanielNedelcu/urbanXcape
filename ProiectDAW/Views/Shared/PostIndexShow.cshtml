<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">


<!-- about section start -->
<div class="about_section layout_padding">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-sm-12">
                
                @* Adresa *@
                @if (Model.Location != null)
                {
                    <div>
                        <p>@Model.Location.Address</p>
                    </div>
                }
               

                @* imaginea *@
                @if (!string.IsNullOrEmpty(Model.Image))
                {
                    @if (Model.Image.Contains(".mp4") || Model.Image.Contains(".mov"))
                    {
                        <video width="550" height="300" controls> <source src="@Model.Image" type="video/mp4"> Your browser does not support the video tag. </video>
                    }
                    else
                    {
                        <img src="@Model.Image" alt="Image"  />
                        @* style = "width: 100%; height: 450px; object-fit: cover" *@
                    }
                    <br />
                }
                

                @* video*@
                @if (!string.IsNullOrEmpty(Model.linkVideo))
                {
                    @* <iframe width="560" height="315" src="https://www.youtube.com/embed/SqcY0GlETPk?si =VrZYZbaC3y9rpPyx" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" referrerpolicy="strict-origin-when-cross-origin" allowfullscreen></iframe> *@

                    <div class="video-container">
                        @Html.Raw(Model.linkVideo)
                    </div>
                    <br />
                }
                

                @* <div class="like_icon"><img src="images/like-icon.png"></div> *@
                @* <div class="like_icon"><i class="bi bi-heart"></i></div> *@

                @if (TempData[Model.Id.ToString()] == "2")
                {
                    @* unlike *@
                    <form method="post" asp-controller="Posts" asp-action="Like" asp-route-id="@Model.Id" class="d-flex align-items-center">
                        <button type="submit" class="custom-button"><div><i class="bi bi-heart-fill"></i></div></button>
                        <p class="ms-2">@Model.Likes Likes</p>
                    </form>
                }
                else
                {
                    <form method="post" asp-controller="Posts" asp-action="Like" asp-route-id="@Model.Id" class="d-flex align-items-center">
                        <button type="submit" class="custom-button"><div><i class="bi bi-heart"></i></div></button>
                        <p class="ms-2">@Model.Likes Likes</p>
                    </form>
                }

                
          
                <style>
                    /* Elimină fundalul gri */
                    .custom-button {
                        background-color: transparent; /* Fundal transparent */
                        border: none; /* Elimină bordura */
                        padding: 0; /* Elimină spațierea implicită */
                        cursor: pointer; /* Cursor pointer */
                    }
                </style>


                <p class="post_text">Post By : @Model.Date</p>
                <p class="lorem_text">@Model.Description</p>
                <div class="social_icon_main">
                    <div class="social_icon">
                        <ul>
                            <li><a href="#"><img src="~/images/fb-icon.png"></a></li>
                            <li><a href="#"><img src="~/images/twitter-icon.png"></a></li>
                            <li><a href="#"><img src="~/images/instagram-icon.png"></a></li>
                        </ul>
                    </div>
                    <div class="read_bt"></div>
                </div>
            </div>

          @*date user*@

            <div class="col-lg-4 col-sm-12">

                @if (Model.User.ProfilePic != null)
                {
					<div class="image_5">
						<img src="@Model.User.ProfilePic" alt="Profile Picture" class="img-fluid rounded-circle" style="max-width: 100px;">
					</div>
                }
                else
                {
					<div class="image_5">
                        <img src="~/images/blank-profile-picture-973460_1280.png" alt="Profile Picture" class="img-fluid rounded-circle" style="max-width: 100px;">
					</div>
                }

                <h1 class="about_taital">@Model.User.UserName</h1>
                <p class="about_text">@Model.User.Description</p>
                <br />
            </div>
        </div>
    </div>
</div>
<!-- about section end --> 

